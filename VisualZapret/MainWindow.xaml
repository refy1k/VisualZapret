<Window x:Class="VisualZapret.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualZapret"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="500" MinWidth="1000">
    <Grid Background="#2D3E40">
        <StackPanel Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" Height="150" HorizontalAlignment="Center" Margin="20">
                <Border CornerRadius="10" Padding="10" Margin="20 0" Width="400" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#387373">
                    <TextBlock Text="Поиск конфига" FontSize="30" Foreground="Wheat" VerticalAlignment="Center"/>
                </Border>

                <Border CornerRadius="10" Padding="10" Margin="20 0" Width="400" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#387373">
                    <TextBlock Text="Обновление конфига" FontSize="30" Foreground="Wheat" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
